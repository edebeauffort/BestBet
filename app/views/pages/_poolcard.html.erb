  <div class="separator-home">
  </div>
  <div class="row">
  <div class="buton-holder" style="width:250px; margin: 0 auto;">
      <ul class="tabs pool-tabs">
        <li class="tab-link current" data-tab="Admin"><em>Created</em></li>
        <li class="tab-link" data-tab="Invites"><em>Invited</em></li>
        <li class="tab-link" data-tab="Bets"><em>Bets</em></li>
      </ul>
      </div>

      <div id="Admin" class="tab-content pool-tab-content current">
      <% i = 0 %>
        <% @pools.each do |pool| %>
        <% if pool.user == current_user %>
          <div class="col-xs-12 col-sm-6">
            <div class="card">
              <div class="card-description">
              <%= link_to "", pool_path(pool), class: 'card-link' %>
                <h3><%= pool.title %> </h3>
                <ul class="list-unstyled list-inline listofcard">
                  <li><%=image_tag "group.png", class: "card-icon"%><%= @bets %></li>
                  <li><%=image_tag "Cash.png", class: "card-icon"%><%= pool.stake %></li>
                  <li class="betclosedtag"><%=image_tag "Clock.png", class: "card-icon"%><span id="pool-<%=pool.id%>"></span></li>
                </ul>
                <hr>
                <p><%= pool.description %></p>
              </div>
            </div>
          </div>
        <% content_for(:after_js) do %>
        <script type="text/javascript">
          $("#pool-<%=pool.id%>")
          .countdown("<%= pool.end_date %>", function(event) {
            $(this).text(
              event.strftime('%Dd %H:%M:%S')
              );
            $(this).on('finish.countdown', function(){
              $("#pool-<%=pool.id%>").html("Bet closed").addClass("finish");
              $(".betselections").click(function(){
              return false;
              });
            });
          })
        </script>
        <% end %>
        <% end %>
        <% end %>
      </div>
      <div id="Invites" class="tab-content pool-tab-content">
      <% i = 0 %>
        <% @pools.each do |pool| %>
        <% pool.invites.each do |invite| %>
        <% if invite.user == current_user %>
          <div class="col-xs-12 col-sm-6">
            <div class="card-invites">
              <div class="card-description-invites">
              <%= link_to "", pool_path(invite.pool), class: 'card-link' %>
                <p><%= "You friend #{invite.pool.user.email} has invited you to bet on the event #{invite.pool.title}!" %></p>
                <hr>
                <ul class="list-unstyled list-inline">
                  <li><%=image_tag "group.png", class: "card-icon-invites"%> 4 </li>
                  <li><%=image_tag "Cash.png", class: "card-icon-invites"%><%= invite.pool.stake %></li>
                  <li><%=image_tag "Clock.png", class: "card-icon-invites"%><span id="pool-<%=invite.pool.id%>"></span></li>
                </ul>
            </div>
          </div>
        </div>
          <% content_for(:after_js) do %>
          <script type="text/javascript">
            $("#pool-<%=invite.pool.id%>")
            .countdown("<%= invite.pool.end_date %>", function(event) {
              $(this).text(
                event.strftime('%Dd %H:%M:%S')
                );
              });
          </script>
          <% end %>
        <% end %>
        <% end %>
        <% end %>
      </div>
      <div id="Bets" class="tab-content pool-tab-content">
      <% i = 0 %>
        <% @pools.each do |pool| %>
        <% pool.bets.each do |invite| %>
        <% if invite.user == current_user %>
          <div class="col-xs-12 col-sm-6">
            <div class="card">
              <div class="card-description">
              <%= link_to "", pool_path(pool), class: 'card-link' %>
                <h3><%= pool.title %> </h3>
                <ul class="list-unstyled list-inline">
                  <li><%=image_tag "group.png", class: "card-icon"%><%= @bets %></li>
                  <li><%=image_tag "Cash.png", class: "card-icon"%><%= pool.stake %></li>
                  <li><%=image_tag "Clock.png", class: "card-icon"%><span id="pool-<%=pool.id%>"></span></li>
                </ul>
                <hr>
                <p><%= pool.description %></p>
              </div>
            </div>
          </div>
        <% content_for(:after_js) do %>
        <script type="text/javascript">
          $("#pool-<%=pool.id%>")
          .countdown("<%= pool.end_date %>", function(event) {
            $(this).text(
              event.strftime('%Dd %H:%M:%S')
              );
            $(this).on('finish.countdown', function(){
              $("#pool-<%=pool.id%>").html("Bet closed").addClass("finish");
              $(".betselections").click(function(){
              return false;
              });
            });
          })
        </script>
        <% end %>
        <% end %>
        <% end %>
        <% end %>
      </div>

  </div>
