<div class="container text-center">
  <div class="row">
    <div class="col-xs-12">
      <div id="chatroom">
      <h2>THE PlAYERS' CLUB CHAT ROOM</h2>
        <div class="chatbox">
          <ul id="messages" class="messages-list">
           <% @pool.messages.last(15).each do |message| %>
           <% if message.user == current_user %>
           <div class= "ownmessagediv">
             <li><%= message.message %></li>
           </div>
           <% else %>
           <div class= "messagediv" id="messagediv">
             <li><%= message.user.username %>:
             <br><%= message.message %></li>
             </div>
             <% end %>
             <% end %>
           </ul>
           <%= render :partial => 'messages/form' %>
         </div>
       </div>
     </div>
   </div>
 </div>
