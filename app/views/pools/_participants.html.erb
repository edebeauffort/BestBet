<h3>The Bold Participants</h3>
  <% @pool.bets.each do |bet| %>
    <div class="col-xs-12">
      <% participant_url = bet.user.facebook_picture_url || "http://placehold.it/30x30" %>
        <div class="flex-participants">
        <p><%= image_tag participant_url, class: "avatar-participant"%></p>
        <p><%= "#{bet.user.first_name} #{bet.user.last_name}" %></p>
        </div>
    </div>
  <% end %>
