<div class="navbar-wagon">
  <!-- Logo -->
  <div class="airbnblogo">
    <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <h2>BestBet</h2>
    <% end %>
  </div>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right ">



    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>
       <%= link_to t(".renter", default: "All your bets"), bets_path, class: "navbar-wagon-item navbar-wagon-link" %>

    <!-- Notification -->
    <%= current_user.balance %>â‚¬

    <!-- Profile picture and dropdown -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <% if current_user.facebook_picture_url %>
        <% avatar_url = current_user.facebook_picture_url || "http://placehold.it/30x30" %>
        <%= image_tag avatar_url, class: "avatar-user dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
        <% else %>
 <% avatar_url = current_user.facebook_picture_url || "http://placehold.it/30x30" %>
        <%= image_tag avatar_url, class: "avatar-user dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
        <%  end%>




        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to user_path(current_user) do %>
            <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
            <% end %>
          </li>


          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>

    <% else %>

      <!-- Login text link -->
       <%= link_to t(".sign_up", default: "Sign up"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-button btn" %>



    <!-- Button (call-to-action) -->
    <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-button-login btn" %>

    <% end %>

  </div>

  <!-- Dropdown list appearing on mobile only -->

</div>

